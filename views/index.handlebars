<header>
        <div class="container-sm">
            <h4 class="nav-title">Welcome User</h4>
            <nav>
                <ul>
                    <li><a href="#">Previous Orders</a></li>
                    <li><a href="/new-order">New Order</a></li>
                    <li><a href="/add-topping">Add Topping</a></li>
                    <li><a href="#">Add Employee</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <main class="body">
        <div class="containers">
            <div class="box">
                <h3>Orders Waiting</h3>
                <ul class="list-group">
                    {{#each orders}}
                    {{#if (isEqual1 data.dataValues.StatusId)}}
                    <li class="list-group-item list-group-item-danger">{{dataValues.id}} - {{dataValues.customer}}
                    <button type="button" class="btn btn-outline-danger btn-sm" data-status="{{dataValues.statusId}}" data-id="{{dataValues.id}}">Ready</button>
                    </li>
                    <a>Order Created on <span>{{moment dataValues.createdAt format="MM-DD-YYYY"}}</span> at <span>{{moment dataValues.createdAt format="h:mm:ss a"}}</span></a>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="containers">
            <div class="box box-two">
                <h3>Orders Ready</h3>
                <ul class="list-group">
                    {{#each orders}}
                    {{#if (isEqual2 dataValues.StatusId)}}
                    <li class="list-group-item list-group-item-success">{{dataValues.id}} - {{dataValues.customer}} 
                    <button type="button" class="btn btn-outline-success btn-sm" data-status="{{dataValues.StatusId}}" data-id="{{dataValues.id}}">Pay</button>
                    </li>
                    {{/if}}
                    {{/each}}
                    
                </ul>
            </div>
        </div>
    </main>
    <script type="text/javascript">
        $(function(){
            $(".preparing").on("click", function(){
                let id = $(this).data("id");

                $.ajax(`/api/ready/${id}`, {
                    type: "PUT"
                }).then(function(){
                    location.reload();
                });
            });

            $(".ready").on("click", function(){
                let id = $(this).data("id");
                
                $.ajax(`/api/done/${id}`, {
                    type: "PUT"
                }).then(function(){
                    location.reload();
                })
            })
        });


var tday=["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
var tmonth=["January","February","March","April","May","June","July","August","September","October","November","December"];

function GetClock(){
var d=new Date();
var nday=d.getDay(),nmonth=d.getMonth(),ndate=d.getDate(),nyear=d.getFullYear();
var nhour=d.getHours(),nmin=d.getMinutes(),nsec=d.getSeconds(),ap;

if(nhour==0){ap=" AM";nhour=12;}
else if(nhour<12){ap=" AM";}
else if(nhour==12){ap=" PM";}
else if(nhour>12){ap=" PM";nhour-=12;}

if(nmin<=9) nmin="0"+nmin;
if(nsec<=9) nsec="0"+nsec;

var clocktext=""+tday[nday]+", "+tmonth[nmonth]+" "+ndate+", "+nyear+" "+nhour+":"+nmin+":"+nsec+ap+"";
document.getElementById('clockbox').innerHTML=clocktext;
}

GetClock();
setInterval(GetClock,1000);
</script>    